<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <div class="mt-4 card">
        <div class="card-header">
          <h3 class="card-title">Send Message as Bot</h3>
        </div>
        <div class="card-body row col-12">
          <form class="col-6" method="get" action="/bot/message">
            <div class="form-group">
              <label for="pesan">Plain Message</label>
              <input
                type="text"
                class="form-control"
                id="pesan"
                placeholder="Send message as a bot"
                name="pesan"
              />
            </div>
            <button type="submit" class="btn btn-primary my-3">Submit</button>
          </form>

          <form
            class="col-6"
            method="POST"
            action="/bot/push-2"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="type">File Type (Image/Document/Audio)</label>
              <select id="type" class="form-control" name="type">
                <option value="image" selected>Image</option>
                <option value="document">Document</option>
                <option value="audio">Audio</option>
              </select>
            </div>
            <div class="form-group">
              <label for="file">Select/Paste The File</label>
              <input type="file" class="form-control" id="file" name="file" />
            </div>
            <div class="form-group">
              <label for="message">Message (optional)</label>
              <input
                type="text"
                class="form-control"
                id="message"
                placeholder="Message of the file"
                name="message"
              />
            </div>
            <button type="submit" class="btn btn-primary my-3">Submit</button>
          </form>
        </div>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>

  <script>
    window.addEventListener("paste", (e) => {
      file.files = e.clipboardData.files;
    });
  </script>
</html>
